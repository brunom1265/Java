package main.com;

import static org.lwjgl.glfw.GLFW.*;

public class Main {

	public static void main(String[] args) {
		if (!glfwInit()) {
			throw new IllegalStateException("Failed to initializae GLFW");
		}
		
		glfwWindowHint(GLFW_VISIBLE, GLFW_FALSE);
		
		long window = glfwCreateWindow(640, 480, "LWJGL Prgram", 0, 0);
		if(window == 0){
			throw new IllegalStateException("Failed to create window!");
		}
	}
}
