package bvsm.fileManager;

import java.io.*;

public class FileManager {

	String path = "src//bvsm//fileManager//Perguntas.txt";
	
	File file = new File(path);;
	PrintWriter out;
	FileWriter write;
	BufferedWriter bufferW;
	

	public FileManager(){
		try {

			if (!file.exists()) {
				file.createNewFile();
				System.out.println("File is created!");
			} else {
				System.out.println("File already exists.");
			}

		} catch (IOException e) {
			e.printStackTrace();
		}
		
		writeFile("ola");
		
	}

	public void writeFile(String theme/*, String[] questions, String rAnswer*/) {
		try {
			write = new FileWriter(file);
			bufferW = new BufferWrite(write);
		} catch (IOException e) {
			e.printStackTrace();
		}
	}

